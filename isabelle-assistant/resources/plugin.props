# Isabelle Assistant Plugin Properties

plugin.isabelle.assistant.AssistantPlugin.name=Isabelle Assistant
plugin.isabelle.assistant.AssistantPlugin.author=AWS
plugin.isabelle.assistant.AssistantPlugin.version=0.1
plugin.isabelle.assistant.AssistantPlugin.description=LLM-powered assistant for Isabelle/jEdit

plugin.isabelle.assistant.AssistantPlugin.activate=startup
plugin.isabelle.assistant.AssistantPlugin.usePluginHome=false

plugin.isabelle.assistant.AssistantPlugin.depend.0=jdk 21
plugin.isabelle.assistant.AssistantPlugin.depend.1=jedit 05.06.00.00

# Options panel
plugin.isabelle.assistant.AssistantPlugin.option-group=assistant-general-options assistant-tool-permissions-options
options.assistant-general-options.label=General
options.assistant-general-options.code=new isabelle.assistant.AssistantOptions();
options.assistant-tool-permissions-options.label=Tool Permissions
options.assistant-tool-permissions-options.code=new isabelle.assistant.AssistantToolPermissionsOptions();

# Menu actions
plugin.isabelle.assistant.AssistantPlugin.menu.label=Isabelle Assistant
plugin.isabelle.assistant.AssistantPlugin.menu=assistant-dockable assistant-suggest assistant-explain assistant-sledgehammer

# Action labels
assistant-suggest.label=Assistant: Suggest Proof Step
assistant-explain.label=Assistant: Explain Code
assistant-sledgehammer.label=Assistant: Run Sledgehammer
assistant-focus-chat.label=Assistant: Focus Chat Input

# Keyboard shortcuts (CS = Ctrl+Shift on Linux/Windows, Cmd+Shift on macOS)
assistant-suggest.shortcut=CS+P
assistant-explain.shortcut=CS+E
assistant-sledgehammer.shortcut=CS+H
assistant-focus-chat.shortcut=CS+C

# Dockable definitions
assistant-dockable.label=Assistant
assistant-dockable.title=Isabelle Assistant
